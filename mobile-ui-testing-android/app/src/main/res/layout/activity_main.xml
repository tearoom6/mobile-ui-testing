    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="biz.tearoom6.mobile_ui_testing_android.MainActivity">

    <android.support.v4.view.PagerTabStrip
        android:id="@+id/pager_tab_strip"
